<!-- Jetty logger config -->
<!-- Options: http://logback.qos.ch/manual/layouts.html, also ChatGPT -->
<configuration scan="true" scanPeriod="5 seconds"> <!-- scan and scanPeriod enable hot reload of this file, leave on -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %logger: %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="hyperfiddle" level="DEBUG" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="hyperfiddle.electric-jetty-adapter" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
</configuration>
